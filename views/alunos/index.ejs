<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Alunos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background-color: #f0f4f8;
      margin: 0;
      /* Ajuste o caminho da imagem se necessário, geralmente fica em /images/ */
      background-image: url('/images/1000209218.png');
      background-size: cover;
      background-position: center;
      min-height: 100vh;
    }

    a.home-link {
      position: absolute;
      top: 15px;
      left: 15px;
      font-size: 24px;
      text-decoration: none;
      color: black;
      background: rgba(255,255,255,0.7);
      padding: 5px 10px;
      border-radius: 5px;
    }

    .header-content {
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-novo {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }

    .container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px 15px;
      width: 90%;
      max-width: 1400px;
      margin: 0 auto;
      justify-content: center;
    }

    .aluno {
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      padding: 15px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
    }

    .aluno img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 50%;
      border: 2px solid #6fa6e9;
      margin-bottom: 10px;
      flex-shrink: 0;
    }

    .nome {
      font-weight: bold;
      font-size: 18px;
      margin-bottom: 10px;
    }

    .tech-button {
      padding: 10px 18px;
      cursor: pointer;
      border: none;
      border-radius: 8px;
      background: linear-gradient(135deg, #5c91c4, #6fa6e9);
      color: white;
      font-weight: bold;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      box-shadow: 0 4px 12px rgba(116, 171, 238, 0.4);
      transition: all 0.3s ease;
      margin-bottom: 10px;
      user-select: none;
      width: 100%;
    }

    .tech-button:hover {
      background: linear-gradient(135deg, #6ba4eb, #00c6ff);
      transform: scale(1.05);
      box-shadow: 0 6px 18px rgba(100, 165, 245, 0.5);
    }

    .info-text {
      font-size: 15px;
      text-align: left;
      display: none;
      width: 100%;
      max-height: 200px;
      overflow-y: auto;
      padding: 10px;
      background: #f8f9fa;
      border-radius: 8px;
      margin-bottom: 10px;
    }
    
    .admin-actions {
        display: flex;
        gap: 5px;
        width: 100%;
        margin-top: auto;
    }
    
    .btn-action {
        flex: 1;
        padding: 5px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
        font-size: 12px;
    }
    
    .btn-edit { background-color: #ffc107; color: black; }
    .btn-del { background-color: #dc3545; }

  </style>
</head>
<body>

  <a href="/" class="home-link">&#x2190;</a>
  
  <div class="header-content">
      <h2 style="background: rgba(255,255,255,0.8); display:inline-block; padding:10px; border-radius:10px;">Alunos</h2>
      <br><br>
      <a href="/alunos/criar" class="btn-novo">+ Novo Aluno</a>
  </div>

  <div class="container" id="alunos-container">
    <% alunos.forEach(function(aluno) { 
        // Lógica de formatação da imagem convertida para dentro do EJS
        let imgNome = aluno.nome.toLowerCase()
            .normalize('NFD').replace(/[\u0300-\u036f]/g, '')
            .replace(/\s+/g, '-');
    %>
        <div class="aluno">
            <img src="/fotos_alunos/<%= imgNome %>.jpeg" alt="<%= aluno.nome %>" onerror="this.onerror=null;this.src='/fotos_alunos/placeholder.jpeg';" />
            
            <div class="nome"><%= aluno.nome %></div>
            
            <button class="tech-button" onclick="toggleInfo('<%= aluno.id %>')">Mostrar informações</button>
            
            <div class="info-text" id="info<%= aluno.id %>">
                <p><strong>Idade:</strong> <%= aluno.idade %></p>
                <p><strong>Aniversário:</strong> <%= aluno.aniversario %></p>
                <p><strong>Gosta de:</strong> <%= aluno.gosta %></p>
                <p><strong>Plano:</strong> <%= aluno.plano %></p>
            </div>

            <div class="admin-actions">
                <a href="/alunos/editar/<%= aluno.id %>" class="btn-action btn-edit">Editar</a>
                <a href="/alunos/deletar/<%= aluno.id %>" class="btn-action btn-del" onclick="return confirm('Tem certeza que deseja excluir <%= aluno.nome %>?');">Excluir</a>
            </div>
        </div>
    <% }); %>
  </div>

  <script>
    // Apenas a função de abrir/fechar o card ficou no front-end
    function toggleInfo(id) {
      const info = document.getElementById(`info${id}`);
      // Pega o botão anterior ao elemento info
      const button = info.previousElementSibling;

      if (info.style.display === "none" || info.style.display === "") {
        info.style.display = "block";
        button.textContent = "Esconder informações";
      } else {
        info.style.display = "none";
        button.textContent = "Mostrar informações";
      }
    }
  </script>

</body>
</html>